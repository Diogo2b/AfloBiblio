{% extends 'base.html.twig' %}

{% block title %}Emprunt index{% endblock %}

{% block body %}
    <h1>Emprunt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateEmprunt</th>
                <th>DateRetourPrevu</th>
                <th>DateRetourReel</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ emprunt.dateRetourPrevu ? emprunt.dateRetourPrevu|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ emprunt.dateRetourReel ? emprunt.dateRetourReel|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ emprunt.etat }}</td>
                <td>
                    <a href="{{ path('app_emprunt_show', {'id': emprunt.id}) }}">show</a>
                    <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emprunt_new') }}">Create new</a>
{% endblock %}
